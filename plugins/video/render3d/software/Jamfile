SubDir TOP plugins video render3d software ;

Description soft3d : "3D software renderer" ;

if $(CMD.NASM) && $(TARGET.PROCESSOR) = "X86" &&
   $(TARGET.PROCESSORSIZE) = "32" && ! [ Property build : projgen ]
{
  SOFT3D_ASMFILES = [ Wildcard i386 : *.asm *.cpp *.h ] ;
}
else
{
  SOFT3D_ASMFILES = ;
}

Plugin soft3d : [ Wildcard *.cpp *.h ] $(SOFT3D_ASMFILES) ;
LinkWith soft3d : csplugincommon csgeom csgfx csutil ;
CompileGroups soft3d : renderers ;

# Historic alias.
NotFile softrender3d ;
Depends softrender3d soft3d ;
