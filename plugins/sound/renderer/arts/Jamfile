SubDir TOP plugins sound renderer arts ;

if $(ARTS.AVAILABLE) = "yes" 
{
Library csarts
	: [ Wildcard *.cpp *.h ]
	: console
;
LinkWith csarts : soundrendercommon csarts.idl csgeom cstool csutil ;
ExternalLibs csarts :  ARTS ;

Help csarts : "Crystal Space aRts sound renderer" ;
CompileGroups csarts :  sounddrivers ;

}

