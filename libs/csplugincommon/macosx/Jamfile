SubDir TOP libs csplugincommon macosx ;

if $(TARGET.OS) = MACOS_X
{
Description csplugincommon_osx : "MacOS/X-specific common plugin classes" ;
Library csplugincommon_osx : 
  [ Wildcard *.cpp *.cxx *.cc *.m *.mm *.M *.h ] 
  [ Wildcard
    [ ConcatDirs $(DOTDOT) $(DOTDOT) include csplugincommon macosx ] : *.h ]
  : shared ;
LibDepends csplugincommon_osx : csplugincommon csgfx csutil ;
}
