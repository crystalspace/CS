<shader compiler="shaderweaver" name="z_only">
  <technique priority="200">
    <pass>
      <combiner plugin="crystalspace.graphics3d.shader.combiner.glcg" />

      <mixmode>
	  <alphatest>disable</alphatest>
      </mixmode>
      <writemask r="true" g="true" b="true" a="true" />

      <snippet id="position" file="/shader-snippets/position.xml" />
      <snippet id="rgbaout" file="/shader-snippets/shadow/fragment-depth.xml" />
    </pass>
  </technique>
</shader>

