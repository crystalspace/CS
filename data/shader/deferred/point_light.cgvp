<cgvp>
<program>
<![CDATA[

struct app2vertex 
{
  float4 Position : POSITION;
};

struct vertex2fragment 
{ 
  float4 Position : POSITION;
  float4 ScreenPos : TEXCOORD0;
};

vertex2fragment main(app2vertex IN,
                     uniform float4x4 ModelViewProj : state.matrix.mvp)
{
  vertex2fragment OUT;

  float4 pos = mul (ModelViewProj, IN.Position);
  OUT.Position = pos;
  OUT.ScreenPos = pos;

  return OUT;
}

]]>
</program>
</cgvp>
