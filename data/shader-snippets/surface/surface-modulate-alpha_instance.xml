<snippet type="compound">
  <alias name="surface-modulate-alpha_instance_surface" file="/shader-snippets/surface/surface-classic.xml" weak="yes"/>
  
  <technique priority="100">
    <snippet id="surface_classic" filealias="surface-modulate-alpha_instance_surface" />
    
    <snippet id="surface_modulate-alpha_instance">
      <technique priority="100">
	  <combiner name="cg" plugin="crystalspace.graphics3d.shader.combiner.glcg" />

        <input name="inputColor" type="rgba" />

        <input name="alpha_factor" type="float" default="complex">
          <block location="cg:vertexIn">
            <varying type="float" name="alpha_factor" />
          </block>
  
          <block location="cg:vertexMain">
            alpha_factor = vertexIn.alpha_factor;
          </block>

          <block location="pass">
            <instanceparam source="alpha factor" destination="vertexIn.alpha_factor" />
          </block>
        </input>

        <block location="cg:vertexToFragment">
          <varying type="float" name="alpha_color" />
        </block>

        <block location="cg:vertexMain">
          alpha_color = alpha_factor;
        </block>
    
        <block location="cg:fragmentMain">
          outputColor.rgb = inputColor.rgb;
          outputColor.a = inputColor.a * alpha_color;
        </block>

        <output name="outputColor" type="rgba" />
      </technique>
    </snippet>

    <connection from="surface_classic" to="surface_modulate-alpha_instance" />
  </technique>
</snippet>

